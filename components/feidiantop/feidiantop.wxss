/* components/feidiantop/feidiantop.wxss */
.top {
  display: flex;
  flex-direction: column;
}

.header {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  padding: 20rpx 30rpx;
}

.header image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.title {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}


.job {
  font-size: 24rpx;
  color: #999;
}

.content {
  display: block;
  margin: 20rpx 30rpx;
  word-break: break-all;
}

.content .intro {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 4;
  overflow: hidden;
}

.pictures {
  padding: 0 30rpx 30rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
}

.picture image {
  width: 100%;
  border: 1px solid #efefef;
  display: block;
}
