.pictures {
  padding: 0 30rpx 30rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
}

.picture image {
  width: 100%;
  border: 1px solid #efefef;
  display: block;
}

.topic {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin: 0 30rpx 20rpx;
  padding: 20rpx 30rpx;
  background: #f4f6f9;
  border-radius: 4rpx;
}

.topic .desc {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding-right: 30rpx;
  flex-shrink: 1;
}

.topic .url {
  font-size: 22rpx;
  color: #999;
}
.topic image{
  display: inline-block;
  width: 100rpx;
  height: 100rpx;
  flex-shrink: 0;
}
.tag {
  font-size: 22rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
}

.tag text {
  color: #3281ff;
  border: 1rpx solid #3281ff;
  border-radius: 18rpx;
  height: 36rpx;
  line-height: 36rpx;
  text-align: center;
  margin: 0 30rpx 20rpx;
  padding: 0 20rpx;
}

