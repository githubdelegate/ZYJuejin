/* homeposItem.wxss */
.item {
  display: flex;
  flex-direction: column;
  padding: 0 30rpx;
  margin-bottom: 20rpx;
  box-sizing: border-box;
  background: #fff;
}

.header {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  color: #abb4bf;
  height: 80rpx;
}

.header image {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}

.name {
  display: flex;
  flex-direction: row;
  align-items: center;
  color: #333;
}

.content {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.content .text {
  flex: 1;
}

.content .img {
  width: 130rpx;
  height: 130rpx;
  margin-left: 20rpx;
}

.content .title {
  font-size: 32rpx;
  margin-bottom: 10rpx;
}

.content .desc {
  overflow: hidden;
  color: #abb4bf;
  font-size: 30rpx;
  -webkit-line-clamp: 2;
    display: -webkit-box;
  -webkit-box-orient: vertical;
}

.footer {
  display: flex;
  align-items: center;
  height: 80rpx;
  flex-direction: row;
  justify-content: flex-start;
}

.label {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #abb4bf;
  margin-right: 40rpx;
}

.label image {
  width: 30rpx;
  height: 30rpx;
  margin-right: 8rpx;
}

